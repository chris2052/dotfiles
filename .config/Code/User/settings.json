{
  "editor.fontSize": 16,
  "editor.wordWrap": "bounded",
  "editor.wordWrapColumn": 140,
  "editor.fontFamily": "Cascadia Code",
  "editor.fontLigatures": true,
  "editor.lineNumbers": "relative",
  "editor.cursorSurroundingLines": 8,
  "editor.cursorBlinking": "solid",
  "editor.cursorStyle": "block",
  "editor.tabSize": 4,
  "editor.insertSpaces": false,
  "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
  "workbench.editor.scrollToSwitchTabs": true,
  "workbench.editor.focusRecentEditorAfterClose": false,
  "workbench.settings.editor": "json",
  "workbench.settings.useSplitJSON": true,
  "workbench.settings.openDefaultSettings": true,
  "workbench.startupEditor": "newUntitledFile",
  "workbench.colorTheme": "Gruvbox Dark Hard",
  "workbench.iconTheme": "material-icon-theme",

  "terminal.integrated.fontFamily": "CaskaydiaCove Nerd Font",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.cursorStyle": "block",
  "terminal.integrated.cursorBlinking": false,
  "terminal.integrated.gpuAcceleration": "canvas",

  "debug.console.fontFamily": "CaskaydiaCove Nerd Font",
  "debug.console.fontSize": 12,

  "files.autoSave": "onFocusChange",
  "files.autoSaveDelay": 60000,
  "files.associations": {
    "*.pdf_tex": "tex"
  },

  // others
  "explorer.confirmDragAndDrop": false,
  "security.workspace.trust.enabled": false,
  
  // extension settings
  // =======================================================
  "code-runner.executorMap": {
    "python": "$pythonPath -u $fullFileName",
  },
  "python.condaPath": "$HOME/miniconda3/bin/conda",
  "code-runner.clearPreviousOutput": false,
  "code-runner.showExecutionMessage": false,
  "code-runner.runInTerminal": true,

  "ltex.language": "de-DE",
  "ltex.dictionary": {
    "de-DE": [
        ":~/sciebo/30 programming/34 latex/de-science-dictionary.txt"
        ]
  },
  "ltex.checkFrequency": "manual",

  "latex-workshop.latex.clean.subfolder.enabled": true,
  "latex-workshop.latex.clean.fileTypes": [
    "*.aux",
    "*.bbl",
    "*.blg",
    "*.idx",
    "*.ind",
    "*.lof",
    "*.lot",
    "*.out",
    "*.toc",
    "*.acn",
    "*.acr",
    "*.alg",
    "*.glg",
    "*.glo",
    "*.gls",
    "*.fls",
    "*.log",
    "*.fdb_latexmk",
    "*.snm",
    "*.synctex(busy)",
    "*.synctex.gz(busy)",
    "*.nav",
    "*.gz",
    "*.bcf",
    "*.xml",
    "*.log"
  ],
  "latex-workshop.latex.autoBuild.run": "never",
  "latex-workshop.hover.preview.scale": 2,
  "latex-workshop.chktex.run": "onType",
  "latex-workshop.view.pdf.viewer": "browser",
  // "latex-workshop.view.pdf.viewer": "external",
  // "latex-workshop.view.pdf.external.viewer.command": "zathura",
  // "latex-workshop.view.pdf.external.viewer.args": [
  //     "--synctex-editor-command",
  //     "code -g %{input}:%{line}",
  //     "%PDF%"
  // ],
  // "latex-workshop.view.pdf.external.synctex.command": "zathura",
  // "latex-workshop.view.pdf.external.synctex.args": [
  //     "--synctex-forward=%LINE%:0:%TEX%",
  //     "%PDF%"
  // ],

  "todo-tree.highlights.defaultHighlight": {
    "icon": "clippy",
    "type": "line",
    "foreground": "#000000",
    "background": "#808080",
  },
  "todo-tree.highlights.customHighlight": {
    "TODO": {
      "iconColour": "#72fff87e",
      "background": "#72fff87e",
    },
    "FIXME": {
      "icon": "alert",
      "iconColour": "#e8f80080",
      "background": "#e8f80080",
    },
    "COMPL": {
      "icon": "verified",
      "iconColour": "#00f80046",
      "background": "#00f80044",
    },
    "BUG": {
      "icon": "megaphone",
      "iconColour": "#f8000080",
      "background": "#f8000080",
      "foreground": "#ffffff",
    }
  },
  "todo-tree.general.tags": [
      "XXX",
      "TODO",
      "HACK",
      "FIXME",
      "BUG",
      "COMPL"
  ],
  "todo-tree.regex.regex": "((%|//|#|<!--|;|/\\*|^)\\s*($TAGS)|^\\s*- \\[ \\])",
  
  "vim.disableExtension": true,
  "vim.enableNeovim": true,
  "vim.neovimPath": "/usr/bin/nvim",
  "vim.leader": "<Space>",
  "vim.easymotion": true,
  "vim.sneak": true,
  "vim.insertModeKeyBindingsNonRecursive": [
    {
      "before": ["j", "k"],
      "after": ["<ESC>"]
    }
  ],
  "vim.operatorPendingModeKeyBindings": [
    {
        "before": ["L"],
        "after": ["$"]
    },
    {
        "before": ["H"],
        "after": ["^"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    //to ommit linewraps
    {
      "before": ["j"],
      "after": ["g", "j"]
    },
    {
      "before": ["k"],
      "after": ["g", "k"]
    },
    {
      "before": ["J"],
      "after": ["5", "g", "j"]
    },
    {
      "before": ["K"],
      "after": ["5", "g", "k"]
    },
    {
      "before": ["<Leader>", "j"],
      "after": ["J"]
    },
    // splits
    {
      "before": ["<C-h>"],
      "after": ["<C-w>", "h"]
    },
    {
      "before": ["<C-j>"],
      "after": ["<C-w>", "j"]
    },
    {
      "before": ["<C-k>"],
      "after": ["<C-w>", "k"]
    },
    {
      "before": ["<C-l>"],
      "after": ["<C-w>", "l"]
    },
    // tabs
    {
      "before": ["<Leader>", "t", "n"],
      "commands": [":tabnew"]
    },
    {
      "before": ["<Leader>", "t", "t"],
      "commands": [":tabnext"]
    },
    {
      "before": ["<Leader>", "q"],
      "commands": [":q"]
    },
    {
      "before": ["<Leader>", "t", "p"],
      "commands": [":tabprev"]
    },
    {
      "before": ["<Leader>", "t", "o"],
      "commands": [":tabo"]
    },
    {
      "before": ["<Leader>", "/"],
      "commands": [":noh"]
    },
    {
      "before": ["<C-w>",],
      "after" : [":", "w", "q", "!", "<enter>"]
    },
    // vscode commands
    {
      "before": ["leader", "w"],
      "commands": [
          "workbench.action.files.save",
      ]
    },
    {
      "before": ["<Leader>", "p"],
      "commands": [
            "workbench.action.showCommands",
      ]
    },
    {
      "before": ["<Leader>", "o"],
      "commands": [
          "workbench.action.gotoSymbol",
      ]
    }
  ],
  "vim.statusBarColorControl": false,
  "vim.statusBarColors.normal": ["#989900", "#000"],
  "vim.statusBarColors.insert": ["#418588", "#000"],
  "vim.statusBarColors.visual": ["#b26086", "#000"],
  "vim.statusBarColors.visualline": ["#b26086", "#000"],
  "vim.statusBarColors.visualblock": ["#b26086", "#000"],
  "vim.statusBarColors.replace": "#ce220e",
  "vim.statusBarColors.commandlineinprogress": "#418588",
  "vim.statusBarColors.searchinprogressmode": "#418588",
  "vim.statusBarColors.easymotionmode": "#418588",
  "vim.statusBarColors.easymotioninputmode": "#418588",
  "vim.statusBarColors.surroundinputmode": "#418588",

  "matlab.matlabpath": "/usr/local/MATLAB/R2022a/bin/matlab",
  "matlab.mlintpath": "/usr/local/MATLAB/R2022a/bin/glnxa64/mlint",
  
  "svgPreview.style": {
    "html": {
      "background": "white"
    }
  },

  "git.suggestSmartCommit": false,
  "hediet.vscode-drawio.codeLinkActivated": false,
  "gitlens.hovers.currentLine.over": "line",
  "git.confirmSync": false,
  "jupyter.widgetScriptSources": [
    "jsdelivr.com",
    "unpkg.com"
  ],

}
