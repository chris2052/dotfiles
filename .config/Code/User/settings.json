// ---------
// todo-tree
// ---------
  "todo-tree.highlights.defaultHighlight": {
    "icon": "hourglass",
    "type": "line",
    "foreground": "#000000",
    "background": "#808080",
  },
  "todo-tree.highlights.customHighlight": {
    "TODO": {
      "iconColour": "#72fff87e",
      "background": "#72fff87e",
    },
    "FIXME": {
      "icon": "alert",
      "iconColour": "#e8f80080",
      "background": "#e8f80080",
    },
    "COMPL": {
      "icon": "verified",
      "iconColour": "#00f80046",
      "background": "#00f80044",
    },
    "BUG": {
      "icon": "megaphone",
      "iconColour": "#f8000080",
      "background": "#f8000080",
      "foreground": "#ffffff",
    }
  },
  "todo-tree.general.tags": [
      "XXX",
      "TODO",
      "HACK",
      "FIXME",
      "BUG",
      "COMPL"
  ],
  "todo-tree.regex.regex": "((%|//|#|<!--|;|/\\*|^)\\s*($TAGS)|^\\s*- \\[ \\])",
  
  // ---
  // vim
  // ---
  "vim.disableExtension": true,
  "vim.enableNeovim": true,
  "vim.neovimPath": "/usr/bin/nvim",
  "vim.leader": "<Space>",
  "vim.easymotion": true,
  "vim.sneak": true,
  "vim.insertModeKeyBindingsNonRecursive": [
    {
      "before": ["j", "k"],
      "after": ["<ESC>"]
    }
  ],
  "vim.operatorPendingModeKeyBindings": [
    // does not work, as expected!
    {
        "before": ["L"],
        "after": ["$"]
    },
    {
        "before": ["H"],
        "after": ["^"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    //to ommit linewraps
    {
      "before": ["j"],
      "after": ["g", "j"]
    },
    {
      "before": ["k"],
      "after": ["g", "k"]
    },
    {
      "before": ["J"],
      "after": ["5", "g", "j"]
    },
    {
      "before": ["K"],
      "after": ["5", "g", "k"]
    },
    {
      "before": ["<Leader>", "j"],
      "after": ["J"]
    },
    // jump to begin/end of line
    {
      "before": ["L"],
      "after": ["$"]
    },
    {
        "before": ["H"],
        "after": ["^"]
    }
    // splits
    {
      "before": ["<C-h>"],
      "after": ["<C-w>", "h"]
    },
    {
      "before": ["<C-j>"],
      "after": ["<C-w>", "j"]
    },
    {
      "before": ["<C-k>"],
      "after": ["<C-w>", "k"]
    },
    {
      "before": ["<C-l>"],
      "after": ["<C-w>", "l"]
    },
    // tabs
    {
      "before": ["<Leader>", "t", "t"],
      "commands": [":tabnew"]
    },
    {
      "before": ["<Leader>", "t", "n"],
      "commands": [":tabnext"]
    },
    {
      "before": ["<Leader>", "q"],
      "commands": [":q"]
    },
    {
      "before": ["<Leader>", "t", "p"],
      "commands": [":tabprev"]
    },
    {
      "before": ["<Leader>", "t", "o"],
      "commands": [":tabo"]
    },
    {
      "before": ["<Leader>", "/"],
      "commands": [":noh"]
    },
    {
      "before": ["<C-w>",],
      "after" : [":", "w", "q", "!", "<enter>"]
    },
    // vscode commands
    {
      "before": ["leader", "w"],
      "commands": [
          "workbench.action.files.save",
      ]
    },
    {
      "before": ["<Leader>", "p"],
      "commands": [
            "workbench.action.showCommands",
      ]
    },
    {
      "before": ["<Leader>", "o"],
      "commands": [
          "workbench.action.gotoSymbol",
      ]
    }
  ],
  "vim.statusBarColorControl": false,
  "vim.statusBarColors.normal": ["#989900", "#000"],
  "vim.statusBarColors.insert": ["#418588", "#000"],
  "vim.statusBarColors.visual": ["#b26086", "#000"],
  "vim.statusBarColors.visualline": ["#b26086", "#000"],
  "vim.statusBarColors.visualblock": ["#b26086", "#000"],
  "vim.statusBarColors.replace": "#ce220e",
  "vim.statusBarColors.commandlineinprogress": "#418588",
  "vim.statusBarColors.searchinprogressmode": "#418588",
  "vim.statusBarColors.easymotionmode": "#418588",
  "vim.statusBarColors.easymotioninputmode": "#418588",
  "vim.statusBarColors.surroundinputmode": "#418588",

